// Function to get random questions for a specific position and experience level
export function getRandomQuestions(
  position: string, 
  experienceLevel: string, 
  count: number = 5
): QuestionData[] {
  // Normalize position to match our database keys
  const normalizedPosition = position.toLowerCase()
    .replace(/\s+/g, '-')
    .replace(/[^a-z0-9-]/g, '');
  
  // Try to find exact match first
  let questions = QUESTION_DATABASE[normalizedPosition];
  
  // If no exact match, try to find partial matches
  if (!questions) {
    const possibleMatches = Object.keys(QUESTION_DATABASE).filter(key => 
      key.includes(normalizedPosition) || normalizedPosition.includes(key)
    );
    
    if (possibleMatches.length > 0) {
      questions = QUESTION_DATABASE[possibleMatches[0]];
    }
  }
  
  // Fallback to general questions if no specific match
  if (!questions) {
    questions = [
      ...QUESTION_DATABASE['software-engineer'],
      ...QUESTION_DATABASE['product-manager'],
      ...QUESTION_DATABASE['business-analyst']
    ];
  }
  
  // Filter by experience level
  const filteredQuestions = questions.filter(q => q.difficulty === experienceLevel);
  
  // If not enough questions for the experience level, include all levels
  const finalQuestions = filteredQuestions.length >= count ? filteredQuestions : questions;
  
  // Shuffle and return requested number
  const shuffled = [...finalQuestions].sort(() => Math.random() - 0.5);
  return shuffled.slice(0, count);
}

