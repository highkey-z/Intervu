// Enhanced function to get questions based on experience level requirements
export function getRandomQuestionsByLevel(
  position: string, 
  experienceLevel: 'entry' | 'mid' | 'senior' | 'executive', 
  count: number = 5,
  previousQuestions: string[] = []
): QuestionData[] {
  const normalizedPosition = position.toLowerCase().replace(/\s+/g, '-');
  
  // Get job-specific questions
  let jobSpecificQuestions = QUESTION_DATABASE[normalizedPosition];
  
  // If no exact match, try to find partial matches
  if (!jobSpecificQuestions) {
    const possibleMatches = Object.keys(QUESTION_DATABASE).filter(key => 
      key.includes(normalizedPosition) || normalizedPosition.includes(key)
    );
    
    if (possibleMatches.length > 0) {
      jobSpecificQuestions = QUESTION_DATABASE[possibleMatches[0]];
    }
  }
  
  // Fallback to general questions if no specific match
  if (!jobSpecificQuestions) {
    jobSpecificQuestions = [
      ...QUESTION_DATABASE['software-engineer'],
      ...QUESTION_DATABASE['product-manager'],
      ...QUESTION_DATABASE['business-analyst']
    ];
  }
  
  // Filter job-specific questions by experience level
  const filteredJobQuestions = jobSpecificQuestions.filter(q => q.difficulty === experienceLevel);
  
  // If not enough job-specific questions for the level, include all levels
  const finalJobQuestions = filteredJobQuestions.length >= 4 ? filteredJobQuestions : jobSpecificQuestions;
  
  // Filter out previously asked questions
  const availableJobQuestions = finalJobQuestions.filter(q => 
    !previousQuestions.includes(q.question)
  );
  const availableGeneralQuestions = GENERAL_QUESTIONS.filter(q => 
    !previousQuestions.includes(q.question)
  );
  
  // Shuffle both question sets
  const shuffledGeneral = [...availableGeneralQuestions].sort(() => Math.random() - 0.5);
  const shuffledJob = [...availableJobQuestions].sort(() => Math.random() - 0.5);
  
  let selectedQuestions: QuestionData[] = [];
  
  // Select questions based on experience level requirements
  if (experienceLevel === 'entry') {
    // Entry level: 3 normal + 2 job-related
    selectedQuestions = [
      ...shuffledGeneral.slice(0, 3),
      ...shuffledJob.slice(0, 2)
    ];
  } else if (experienceLevel === 'mid') {
    // Mid level: 2 normal + 3 job-related
    selectedQuestions = [
      ...shuffledGeneral.slice(0, 2),
      ...shuffledJob.slice(0, 3)
    ];
  } else if (experienceLevel === 'senior' || experienceLevel === 'executive') {
    // Senior/Executive: 1 normal + 4 job-related
    selectedQuestions = [
      ...shuffledGeneral.slice(0, 1),
      ...shuffledJob.slice(0, 4)
    ];
  }
  
  // If we don't have enough questions, fill with available ones
  if (selectedQuestions.length < count) {
    const remaining = count - selectedQuestions.length;
    const allQuestions = [...shuffledGeneral, ...shuffledJob];
    const additionalQuestions = allQuestions.filter(q => 
      !selectedQuestions.some(selected => selected.question === q.question)
    );
    selectedQuestions = [
      ...selectedQuestions,
      ...additionalQuestions.slice(0, remaining)
    ];
  }
  
  return selectedQuestions.slice(0, count);
}

// Function to get all available positions
export function getAvailablePositions(): string[] {
  return Object.keys(QUESTION_DATABASE).map(key => 
    key.split('-').map(word => 
      word.charAt(0).toUpperCase() + word.slice(1)
    ).join(' ')
  );
}
